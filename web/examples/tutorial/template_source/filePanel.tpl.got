{{< package }}tutorial{{end}}
{{< imports }}
{{end}}
{{< control }}FilePanel{{end}}

{{define template }}
<figure>
<figcaption>{{= ctrl.base }}</figcaption>
<pre>
<code>
{{g
var content string

if ctrl.file != "" {
    data,err := ioutil.ReadFile(ctrl.file)
    if err == nil {
        content = html.EscapeString((string(data)))
    }
}
}}
{{= content }}
</code>
</pre>
</figure>
{{end}}

{{renderControlTemplate}}