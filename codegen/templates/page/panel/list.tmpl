	switch a.ID {
	case {{= lcPanelName }}Search:
		p.Refresh()
	case {{= lcPanelName }}RowClick: // edit
		id := p.GetClickedRowValue(a)
	    if id != "" {
			p.EditItem(ctx, id)
	    }
	case {{= lcPanelName }}NewClick: // new
		p.EditItem(ctx, "")
	}
}

