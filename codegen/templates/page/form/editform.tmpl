	f.DeleteButton.OnSubmit(
	    action.Confirm(f.ΩT("Are you sure you want to delete this item?")),
	    action.Ajax(f.ID(), {{= t.GoName }}DeleteAction),
	    )
	f.DeleteButton.SetValidationType(page.ValidateNone)
