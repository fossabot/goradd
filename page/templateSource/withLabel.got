package page

import (
	"context"
	"bytes"
	"github.com/spekary/goradd/html"
)

func LabelTmpl(ctx context.Context, ctrl ControlI, h string, buf *bytes.Buffer) {

{{
<div id="{{= ctrl.ID() }}_ctl" {{= ctrl.WrapperAttributes().String() }} >
{{if ctrl.Label() != "" }}
  <label id="{{= ctrl.ID() }}_lbl" class="goradd-lbl"{{if ctrl.HasFor() }} for="{{= ctrl.ID() }}" {{if}}>{{= ctrl.Label() }}</label>
{{if}}
{{= html.Indent(h) }}
  <div id="{{= ctrl.ID() }}_err" class="goradd-err">{{= ctrl.ValidationError() }}</div>
{{if ctrl.Instructions() != "" }}
  <div id="{{= ctrl.ID() }}_inst" class="goradd-inst" >{{= ctrl.Instructions() }}</div>
{{if}}
</div>
}}
return

}
